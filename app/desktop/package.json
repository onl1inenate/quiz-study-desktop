{
  "name": "quiz-study-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "prep": "sh ./prep.sh",
    "dev": "npm run prep && electron .",
    "dist": "npm run prep && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^5.13.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.quizfirst.study",
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "asarUnpack": [
      "resources/backend/**",
      "**/*.node"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education"
    }
  }
}
